shopt -s nullglob

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_exports ]; then
    . ~/.bash_exports
fi

for file in "$HOME/.bash_functions"/*; do
  [[ -f "$file" ]] && source "$file"
done

for file in "$HOME/.bash_commons"/*; do
  [[ -f "$file" ]] && source "$file"
done
unset -f run

export PS1='$(set_prompt_emoji) \[\e[0;33m\]âž¤ \[\e[0m\]'

